                                               HorizontalTextAlignment="Center"/>

                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>-->
            </Grid>

            <ffimage:CachedImage Source="{Binding Image}"
                                 BitmapOptimizations="True"
                                 Grid.Column="1"
                                 VerticalOptions="StartAndExpand"
                                 Margin="0,15,0,0"
                                 HorizontalOptions="CenterAndExpand"
                                 Grid.Row="0"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>